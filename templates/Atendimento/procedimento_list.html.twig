{% extends '@CrosierLibBase/index.html.twig' %}



{% block page_content %}


    <div class="card" style="margin-bottom: 50px;">
        <div class="card-header">

            <div class="d-flex flex-wrap align-items-center">

                <div class="mr-1">
                    Procedimentos
                </div>

                <div class="d-sm-flex flex-nowrap ml-auto">

                    <a role="button" class="btn btn-primary ml-1" title="Novo"
                       href="{{ formUrl }}">
                        <i class="fas fa-file" aria-hidden="true"></i>
                    </a>

                </div>
            </div>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col">
                    {% include '@CrosierLibBase/Util/flashesOnAlerts.html.twig' %}
                </div>
            </div>

            <div class="table-responsive-sm">

                <form name="form_{{ listId }}" id="form_{{ listId }}">
                    <table class="table table-striped table-hover crsr-datatable display compact" id="{{ listId }}">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nome</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for e in dados %}
                            <tr>
                                <td>
                                    {{ e.id }}
                                </td>
                                <td>
                                    {{ e.nome }}
                                </td>
                                <td class="text-right">

                                    <a role="button" class="btn btn-sm btn-primary"
                                            href="{{ url('cln_procedimento_form', {'id': e.id}) }}">
                                        <i class="fas fa-wrench" aria-hidden="true"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            data-url="{{ url('cln_procedimento_delete', {'id': item.id}) }}"
                                            data-token="{{ csrf_token('delete') }}"
                                            data-target="#confirmationModal" data-toggle="modal">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                    <br/>
                                    <span class="badge badge-secondary">{{ item.updated|date('d/m/Y H:i:s') }}</span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>

            </div>

        </div>
    </div>


{% endblock %}



{% block down_scripts %}
{% endblock %}